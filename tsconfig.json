{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
      "paths": {
      "@shared": [
        "./shared"
      ],
      "@shared/constants": [
        "./shared/constants"
      ],
      "@shared/ui": [
        "./shared/ui"
      ],

       "@shared/services": [
        "./shared/services"
      ],
      "@shared/api": [
        "./shared/api"
      ],
       "@shared/validation": [
        "./shared/validation"
      ],
      "@widgets": [
        "./widgets"
      ],
       "@hooks": [
        "./hooks"
      ],
      "@context": [
        "./context"
      ],
      "@pages": [
        "./pages"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
